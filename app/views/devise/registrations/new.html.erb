<div class="container">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron text-center">
    <h1 class="text-center">Sign up</h1>
    <p class="text-center">Silver Fit helps Boomers get fit, live healthier, more active lives, and spend more time with loved ones.</p>

    <div class="info-form">
      <h3>First, we need your email, your name, and a password!</h3>

      <%#= form_for(resource, :as => resource_name, :url => "/yes" do |f| %>
        <%#= devise_error_messages! %>
        <form>
        <div class="form-group">
          <!-- <%#= f.label :email %> -->
        <%#= f.email_field :email, placeholder: 'email', autofocus: true %>
        <input type="text", placeholder="email", autofocus="true">
        </div>

        <div class="form-group">
          <!-- <label>Name</label> -->
        <input type="text", placeholder="name">
        </div>
        <div class="form-group">
        <!-- <%#= f.password_field :password %> -->
        <input type="password", placeholder="password">
        </div>

        <div class="form-group">
        <!-- <%#= f.password_field :password_confirmation %> -->
        <input type="password", placeholder="password confirmation">
        </div>
        <br/>

        <h3>Now, we need a bit more info:</h3>

        <div class="form-group">

        <input type="text", placeholder="weight">
        </div>
        <div class="form-group"><label>Current Activity Level:</label>
          <select>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select><br />
        </div>
        <div class="form-group">
        <label>Gender:</label>
          <select>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
          </select>
        </div>
        <div class="form-group">
        <label>When do you want to reach your goal?</label></br>
        <input type="text"></input>
        <br />
          <%#= u.text_field :deadline %><br />


        <div>
          <input type="submit" class="btn btn-success" value="Sign up">
        </div>
      </form>
    </div>
  </div>





<%#= render "devise/shared/links" %>
